<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorGrey</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FilterLabels">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="FilterLabels.Toolbar">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ActionBarTitle">
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">42sp</item>
        <item name="fontPath">fonts/AncientMedium.ttf</item>
    </style>

    <style name="DialogToolbar">
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/colorDialogToolbarBackground</item>
    </style>

    <style name="GridLayout">
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>
</resources>

